apiVersion: v1
clusters:
- cluster:
    certificate-authority: certs/ca.{{ certificate_authority_name }}.cer
    server: https://{{ kubernetes_public_address }}:{{ kubernetes_public_port }}
  name: {{ kubernetes_cluster_name }}
contexts:
- context:
    cluster: {{ kubernetes_cluster_name }}
    user: system:node:{{ inventory_hostname }}
  name: default
current-context: default
kind: Config
preferences: {}
users:
- name: system:node:{{ inventory_hostname }}
  user:
    client-certificate: certs/system_node_{{ inventory_hostname }}.cer
    client-key: certs/system_node_{{ inventory_hostname }}.key
